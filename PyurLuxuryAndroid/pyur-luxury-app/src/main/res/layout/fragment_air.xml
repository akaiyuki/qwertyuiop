<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:scrollbars="none"
    tools:context="com.av.dev.pyurluxuryandroid.Fragment.AirFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/hotel_app_bar" />


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="origin"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="destination"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtorigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:text="- -"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size_small" />

                <!--<EditText-->
                    <!--android:id="@+id/txtorigin"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="Select your vehicle type"-->
                    <!--android:textColor="@color/colorEditText" />-->


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_flight" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtdestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="- -"
                    android:textAllCaps="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/select1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Select City"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size_small" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Select City"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtoneway"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_oneway"
                android:gravity="center"
                android:padding="10dp"
                android:text="One Way"
                android:textColor="@color/colorButtonBackground" />

            <TextView
                android:id="@+id/txtroundway"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="83dp"
                android:background="@drawable/ic_roundway"
                android:gravity="center"
                android:padding="10dp"
                android:text="Roundway"
                android:textColor="@color/colorWhiteText" />


        </RelativeLayout>


        <TextView
            android:id="@+id/vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="vehicle type"
            android:textAllCaps="true"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/font_size_small" />

        <EditText
            android:id="@+id/editvehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_rounded_edge"
            android:drawableRight="@drawable/ic_chevron_right"
            android:hint="Select your vehicle type"
            android:padding="10dp"
            android:textColor="@color/colorEditText" />

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Departure"
            android:textAllCaps="true"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/font_size_small" />

        <EditText
            android:id="@+id/editdeparture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_rounded_edge"
            android:drawableRight="@drawable/ic_date"
            android:hint="Select your departure date"
            android:padding="10dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:textColor="@color/colorEditText" />


        <TextView
            android:id="@+id/txtreturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Return"
            android:textAllCaps="true"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/font_size_small" />

        <EditText
            android:id="@+id/editreturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_rounded_edge"
            android:drawableRight="@drawable/ic_date"
            android:hint="Select your return date"
            android:padding="10dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:textColor="@color/colorEditText" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="pick up time"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editpickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_rounded_edge"
                    android:drawableRight="@drawable/ic_time"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Select time"
                    android:padding="10dp"
                    android:textColor="@color/colorEditText" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtreturntime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="return time"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editreturntime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_rounded_edge"
                    android:drawableRight="@drawable/ic_time"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Select time"
                    android:padding="10dp"
                    android:textColor="@color/colorEditText" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/passengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="passengers"
            android:textAllCaps="true"
            android:textColor="@color/colorTextColor"
            android:textSize="12sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:scrollbars="vertical" />


        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="notes"
            android:textAllCaps="true"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/font_size_small" />

        <EditText
            android:id="@+id/editnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_rounded_edge"
            android:hint="Write your message"
            android:padding="15dp"
            android:textColor="@color/colorEditText" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:background="@color/colorButtonBackground"
            android:text="book now"
            android:textColor="@color/colorWhiteText" />

    </LinearLayout>

</ScrollView>
