<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:scrollbars="none"
    tools:context="com.av.dev.pyurluxuryandroid.Fragment.SeaTransportFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/hotel_app_bar" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="cruise type"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edittype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rounded_edge"
            android:drawableRight="@drawable/ic_chevron_right"
            android:hint="Select cruise type"
            android:padding="10dp"
            android:textColor="@color/colorButtonBackground"/>


        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="origin"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editorigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rounded_edge"
            android:hint="Enter your origin"
            android:padding="15dp"
            android:textColor="@color/colorButtonBackground"/>


        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="destination"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rounded_edge"
            android:hint="Enter your destination"
            android:padding="15dp"
            android:textColor="@color/colorButtonBackground"/>


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="departure date"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editdeparture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_rounded_edge"
                    android:drawableRight="@drawable/ic_date"
                    android:hint="Select date"
                    android:padding="10dp"
                    android:textColor="@color/colorButtonBackground"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtreturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="return date"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editreturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_rounded_edge"
                    android:drawableRight="@drawable/ic_date"
                    android:hint="Select date"
                    android:padding="10dp"
                    android:textColor="@color/colorButtonBackground"/>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/estimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="estimated time"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editestimate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rounded_edge"
            android:drawableRight="@drawable/ic_time"
            android:hint="Select time"
            android:padding="10dp"
            android:textColor="@color/colorButtonBackground"/>


        <TextView
            android:id="@+id/passengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="passengers"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:scrollbars="vertical" />


        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="notes"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/white_rounded_edge"
            android:hint="Write your message"
            android:padding="15dp"
            android:textColor="@color/colorButtonBackground"/>


        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:background="@color/colorButtonBackground"
            android:text="book now"
            android:textColor="@color/colorWhiteText" />


    </LinearLayout>

</ScrollView>
